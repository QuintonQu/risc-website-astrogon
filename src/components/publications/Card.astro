---
import type { PubEntry } from "@/types";
import { plainify } from "@lib/textConverter";
import { formatDate } from "@lib/formatDate";
import { Image } from "astro:assets";
import { FaGlobe } from "react-icons/fa6";
import { FaCode } from "react-icons/fa6";
import { FaRegFilePdf } from "react-icons/fa";

interface Props {
  entry: PubEntry;
}

const { entry }: Props = Astro.props;
const {
  title,
  authors,
  projectPage,
  projectCode,
  projectPdf,
  image,
  imageAlt
} = entry.data;

const entryDate = entry.data.date ? formatDate(entry.data.date) : null;
const publicationVenue = entry.body ? plainify(entry.body) : null;

---

<article class="grid grid-cols-1 sm:grid-cols-[auto_1fr] gap-4 items-start">
  {image && (
    <Image
      src={image}
      alt={imageAlt}
      class="w-32 h-auto object-cover rounded-lg shadow-md"
      loading="lazy"
    />
  )}

  <div class="flex flex-col gap-2">
    <h4 class="text-lg font-bold">{title}</h4>

    {publicationVenue && (
      <p class="text-sm text-gray-500">{publicationVenue}</p>
    )}

  {authors && (
    <p class="text-sm text-gray-700">
      {authors.map((author, index) => (
        <Fragment key={index}>
          {author.affiliation
            ? author.name
            : <b>{author.name}</b>}
          {index < authors.length - 1 && ", "}
        </Fragment>
      ))}
    </p>
  )}

    <div class="flex gap-4 text-sm text-blue-600 underline items-center">
      {projectPage && (
        <a href={projectPage} target="_blank" rel="noopener noreferrer" class="flex items-center gap-1">
          <FaGlobe/>Project Page
        </a>
      )}
      {projectCode && (
        <a href={projectCode} target="_blank" rel="noopener noreferrer" class="flex items-center gap-1">
          <FaCode /> Code
        </a>
      )}
      {projectPdf && (
        <a href={projectPdf} target="_blank" rel="noopener noreferrer" class="flex items-center gap-1">
          <FaRegFilePdf /> PDF
        </a>
      )}
    </div>
  </div>
</article>