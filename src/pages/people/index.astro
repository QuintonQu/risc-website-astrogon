---
import type { PeopleEntry } from "@/types";
import CollectionLayout from "@components/people/CollectionLayout.astro";
import { getEntries } from "@lib/contentParser";
import { getIndex } from "@lib/contentParser";
import { sortByTitle } from "@lib/sortFunctions";

const peopleIndex = await getIndex("people") as PeopleEntry;
const entries = await getEntries("people", sortByTitle) as PeopleEntry[];
---

<CollectionLayout peopleIndex={peopleIndex} entries={entries} />
